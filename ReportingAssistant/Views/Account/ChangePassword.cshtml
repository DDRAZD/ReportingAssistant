@model ReportingAssistant.ViewModels.RegisterViewModel

@{
    ViewBag.Title = "ChangePassword";
}

<h2>ChangePassword</h2>


@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post))
{

    <div class="form-row">
        <div class="form-group col-md-6">
            @Html.LabelFor(item => item.Password)
            @Html.TextBoxFor(item => item.Password, new { placeholder = "new password", @class = "form-control" })
            @Html.ValidationMessageFor(item => item.Password)
        </div>
        <div class="form-group col-md-6">
            @Html.LabelFor(item => item.ConfirmPassword)
            @Html.TextBoxFor(item => item.ConfirmPassword, new { placeholder = "confirm password", @class = "form-control" })
            @Html.ValidationMessageFor(item => item.ConfirmPassword)
        </div>
    </div>
    @Html.ValidationSummary()
    <button type="submit" class="btn btn-success"> Change password </button>
    <a class="btn btn-danger" href="@Url.Action("UserHome","Account")">Cancel</a>




}

