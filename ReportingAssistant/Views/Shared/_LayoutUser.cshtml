

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/fontawesome.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.6.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/umd/popper.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
    <title>@ViewBag.Title</title>
    <style>
        .field-validation-error, .validation-summary-errors {
            color: red;
        }
    </style>
</head>
<body>

    <div class="row">
        <div class="col-2 bg-primary" text-white" style="min-height:1050px; padding:0px">
            <!--adding a side bar-->
            <div class="list-group">
                <a href="/home/index" class="list-group-item text-white" style="background-color:transparent">Home</a>

                @if (User.Identity.IsAuthenticated == true)
                {
                    <a href="/Account/Logout" class="list-group-item text-white" style="background-color:transparent">Logout</a>
                    <a href="@Url.Action("UserHome","Account")" class="list-group-item text-white" style="background-color:transparent">My Profile</a>
                    <a href="@Url.Action("Changepassword","Account")" class="list-group-item text-white" style="background-color:transparent">Change Password</a>
                    <a href="@Url.Action("Index","Tasks")" class="list-group-item text-white" style="background-color:transparent">View Tasks</a>
                    <a href="@Url.Action("SeeTasksDone","Tasks")" class="list-group-item text-white" style="background-color:transparent">View Tasks Done</a>

                }
                else
                {
                    <a href="/Account/Login" class="list-group-item text-white" style="background-color:transparent">Login</a>
                    <a href="/Account/Register" class="list-group-item text-white" style="background-color:transparent">Register</a>
                }

            </div>
        </div>
        <div class="col-10" style="min-height:610px; padding:20px">
            <div class="container-fluid" style="padding: 0px">
                @RenderBody()
            </div>
        </div>
    </div>
 </body>
</html>
